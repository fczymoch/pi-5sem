  `]
})
export class HomeComponent implements OnInit {
  totalForklifts = 0;
  totalEmployees = 0;
  maintenanceCount = 0;
  availableCount = 0;

  recentActivities = [
    {
      icon: 'engineering',
      color: 'primary',
      message: 'Empilhadeira XL-2000 entrou em manutenção',
      time: new Date(2025, 9, 31, 14, 30)
    },
    {
      icon: 'person',
      color: 'accent',
      message: 'Novo operador certificado: João Silva',
      time: new Date(2025, 9, 31, 13, 15)
    },
    {
      icon: 'check_circle',
      color: 'primary',
      message: 'Manutenção concluída: Empilhadeira FL-100',
      time: new Date(2025, 9, 31, 11, 45)
    }
  ];

  constructor(private dashboardService: DashboardService) {}

  ngOnInit() {
    this.loadDashboardData();
    this.initializeCharts();
  }

  loadDashboardData() {
    this.forkliftService.getForklifts().subscribe(forklifts => {
      this.totalForklifts = forklifts.length;
      this.maintenanceCount = forklifts.filter(f => f.status === 'maintenance').length;
      this.availableCount = forklifts.filter(f => f.status === 'available').length;
      this.updateStatusChart(forklifts);
    });

    this.employeeService.getEmployees().subscribe(employees => {
      this.totalEmployees = employees.length;
      this.updateCertificationsChart(employees);
    });
  }

  initializeCharts() {
    // Status Chart
    new Chart('statusChart', {
      type: 'doughnut',
      data: {
        labels: ['Disponível', 'Em Uso', 'Manutenção'],
        datasets: [{
          data: [0, 0, 0],
          backgroundColor: ['#4caf50', '#2196f3', '#ff9800']
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false
      }
    });

    // Certifications Chart
    new Chart('certificationsChart', {
      type: 'bar',
      data: {
        labels: ['Operação de Empilhadeira', 'Segurança', 'Manutenção Básica'],
        datasets: [{
          label: 'Funcionários Certificados',
          data: [0, 0, 0],
          backgroundColor: '#1976d2'
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              stepSize: 1
            }
          }
        }
      }
    });
  }

  updateStatusChart(forklifts: any[]) {
    const available = forklifts.filter(f => f.status === 'available').length;
    const inUse = forklifts.filter(f => f.status === 'in-use').length;
    const maintenance = forklifts.filter(f => f.status === 'maintenance').length;

    const chart = Chart.getChart('statusChart');
    if (chart) {
      chart.data.datasets[0].data = [available, inUse, maintenance];
      chart.update();
    }
  }

  updateCertificationsChart(employees: any[]) {
    const certifications = {
      'Operação de Empilhadeira': 0,
      'Segurança': 0,
      'Manutenção Básica': 0
    };

    employees.forEach(employee => {
      employee.certifications.forEach((cert: string) => {
        if (cert in certifications) {
          certifications[cert as keyof typeof certifications]++;
        }
      });
    });

    const chart = Chart.getChart('certificationsChart');
    if (chart) {
      chart.data.datasets[0].data = Object.values(certifications);
      chart.update();
    }
  }
}
